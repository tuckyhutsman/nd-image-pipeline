DB_USER=pipeline_user
DB_PASSWORD=change_this_password
DB_NAME=pipeline_db
NODE_ENV=production
PORT=3001
JWT_SECRET=your-secret-key-change-in-production
REDIS_URL=redis://redis:6379
REACT_APP_API_URL=http://localhost:3001
OUTPUT_PATH=/tmp/pipeline-output

# Automatic Batch Cleanup Configuration
# Enable/disable automatic cleanup of old batches
AUTO_CLEANUP_ENABLED=true

# Days to retain completed batches before auto-deletion
# Custom-named batches are NEVER automatically deleted
BATCH_RETENTION_DAYS=30

# Days to retain failed batches before auto-deletion
# Failed batches use shorter retention period
FAILED_BATCH_RETENTION_DAYS=7

# How often to run the cleanup process (in hours)
CLEANUP_INTERVAL_HOURS=24
